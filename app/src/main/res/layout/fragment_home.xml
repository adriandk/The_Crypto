<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/grey"
    tools:context=".ui.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/convert_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/convert_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calculate_icon"
                        app:backgroundTint="@color/blue"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:id="@+id/convert_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convert"
                        android:textSize="22sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/convert_image"
                        android:layout_marginStart="16dp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/top_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/convert_card"
                android:layout_marginTop="16dp"
                android:text="Top Coins"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_top_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_coin"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_list_horizontal" />

            <TextView
                android:id="@+id/gainers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_top_coin"
                android:layout_marginTop="16dp"
                android:text="Gainers"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gainers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gainers_text"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_list_horizontal" />

            <TextView
                android:id="@+id/losers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_gainers"
                android:layout_marginTop="16dp"
                android:text="Losers"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_losers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/losers_text"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_list_horizontal" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>